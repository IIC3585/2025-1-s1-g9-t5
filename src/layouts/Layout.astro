---
import '../styles/global.css';
import '../styles/components.css';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-[#141414] text-white">
    <header class="bg-black border-b border-gray-800">
      <div class="container mx-auto px-4">
        <div class="flex items-center justify-between h-16">
          <a href={`${import.meta.env.BASE_URL}`} class="flex items-center space-x-2">
            <svg class="w-8 h-8 text-red-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z" />
            </svg>
            <span class="text-xl font-bold text-white">MovieFan</span>
          </a>
          
          <nav class="hidden md:flex items-center space-x-8">
            <a href={`${import.meta.env.BASE_URL}`} class="text-gray-300 hover:text-white">Inicio</a>
            <a href={`${import.meta.env.BASE_URL}movies`} class="text-gray-300 hover:text-white">Películas</a>
            <a href={`${import.meta.env.BASE_URL}genres`} class="text-gray-300 hover:text-white">Géneros</a>
            <a href={`${import.meta.env.BASE_URL}history`} class="text-gray-300 hover:text-white">Historial</a>
            <a href={`${import.meta.env.BASE_URL}watchlist`} class="text-gray-300 hover:text-white">Watchlist</a>
          </nav>

          <button class="md:hidden" id="mobile-menu-button">
            <svg class="w-6 h-6 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile menu -->
      <div class="md:hidden hidden" id="mobile-menu">
        <div class="px-2 pt-2 pb-3 space-y-1">
          <a href={`${import.meta.env.BASE_URL}`} class="block px-3 py-2 text-gray-300 hover:text-white">Inicio</a>
          <a href={`${import.meta.env.BASE_URL}movies`} class="block px-3 py-2 text-gray-300 hover:text-white">Películas</a>
          <a href={`${import.meta.env.BASE_URL}genres`} class="block px-3 py-2 text-gray-300 hover:text-white">Géneros</a>
          <a href={`${import.meta.env.BASE_URL}history`} class="block px-3 py-2 text-gray-300 hover:text-white">Historial</a>
          <a href={`${import.meta.env.BASE_URL}watchlist`} class="block px-3 py-2 text-gray-300 hover:text-white">Watchlist</a>
        </div>
      </div>
    </header>

    <slot />

    <footer class="bg-black border-t border-gray-800 mt-12">
      <div class="container mx-auto px-4 py-8">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="flex items-center space-x-2 mb-4 md:mb-0">
            <svg class="w-6 h-6 text-red-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z" />
            </svg>
            <span class="text-lg font-bold text-white">MovieFan</span>
          </div>
          <p class="text-gray-400 text-sm">
            © 2024 MovieFan. Todos los derechos reservados.
          </p>
        </div>
      </div>
    </footer>

    <script>
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html> 